---
import PlotFigure from "../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguin from "../assets/penguin.json";
import diamonds from "../assets/diamonds.json";
---

<h1>Exemple Plot avec Astro : Penguins</h1>

<PlotFigure
  options={{
    marks: [
      Plot.dot(penguin, {
        x: "flipper_length_mm",
        y: "body_mass_g",
        stroke: "species"
      })
    ]
  }}
/>


<h1>Exemple Plot avec Astro : Diamonds</h1>
<PlotFigure
  options={{
    x: {label: "Carats"},
    y: {label: "Prix ($)", type: "log"}, // Ã©chelle logarithmique pour mieux voir les valeurs
    marks: [
      Plot.dot(diamonds, {x: "carat", y: "price", stroke: "cut"})
    ]
  }}
/>
